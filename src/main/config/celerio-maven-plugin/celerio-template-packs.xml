<celerio xmlns="http://www.jaxio.com/schema/celerio" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://www.jaxio.com/schema/celerio ./celerio.xsd">
    <configuration>
        <packs>
            <pack name="pack-javaee7-backend" path="pack-javaee7-backend/src/main/resources" enable="true"/>
            <pack name="pack-javaee7-frontend-conversation" path="pack-javaee7-frontend-conversation/src/main/resources" enable="false"/>
            <!-- you may enable this pack instead of the previous one if you prefer a conversation-less approach -->
            <pack name="pack-javaee7-frontend" path="pack-javaee7-frontend/src/main/resources" enable="true"/>
            <pack name="pack-javaee7-wildfly" path="pack-javaee7-wildfly/src/main/resources" enable="true"/>
        </packs>
    </configuration>
</celerio>
