<celerio xmlns="http://www.jaxio.com/schema/celerio" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://www.jaxio.com/schema/celerio ./celerio.xsd">
    <configuration>
        <packs>
            <pack name="pack-javaee-jpa" path="src/celerio/backend" enable="true"/>
            <pack name="pack-javaee-jsf-conversation" path="src/celerio/frontend-conversation" enable="true"/>
            <!-- you may enable this pack instead of the previous one if you prefer a conversation-less approach -->
            <pack name="pack-javaee-jsf-simple" path="src/celerio/frontend-simple" enable="false"/>
            <pack name="pack-javaee-wildfly" path="src/celerio/wildfly" enable="true"/>
        </packs>
    </configuration>
</celerio>
